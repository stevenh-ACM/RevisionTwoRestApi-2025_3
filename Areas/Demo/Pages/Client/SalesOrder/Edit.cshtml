@page
@model EditModel

@{
    ViewData["Title"] = "Sales Orders";
}

<h4 class="align-text-top text-muted m-1" >@ViewData["Title"] - Edit</h4>
<hr />

<div class="container pagetop p-3 m-2" >
    <p>
        <a asp-area="Demo" asp-page="/Home/Index"><i class="bi bi-house-up" title="Demo Home"></i></a>&nbsp;&nbsp;&nbsp;
        <a asp-area="Demo" asp-page="/Client/SalesOrder/Index"><i class="bi bi-arrow-return-left" title="SalesOrder Main"></i></a>&nbsp;&nbsp;&nbsp;
        <a asp-area="Demo" asp-page="/Client/SalesOrder/Create"><i class="bi bi-plus-square" title="Create Sales Order"></i></a>

        <img src="~/img/sales-order-icon-24.jpg" class="img-fluid" style="float:right;height:auto; width:100px;" title="Sales Orders" />
    </p>
    <p class="text-muted">Description and Sales Order Type allowed </p>
</div>
<br />

<div class="container pagemiddle p-3 m-1" >
    <form method="post">
        <input type="hidden" asp-for="salesOrder.Id" class="form-control" />
        <input type="hidden" asp-for="salesOrder.CurrencyID" class="form-control" />

@*Top Row*@
        <div class="row p-1">
            <div class="col-auto col-md-4">
                <label asp-for="salesOrder.Status" class="control-label"></label>
                <div class="input-group">
                    <select name="salesOrder.Status" asp-for="salesOrder.Status" asp-items=@Model.Selected_SalesOrder_Statuses class="form-select select"></select>
                    <span class="input-group-append">
                        <span class="input-group-text bg-light d-block">
                            <i class="bi bi-list-check"></i>
                        </span>
                    </span>
                </div>
            </div>
            <div class="col-auto col-md-4">
                <label asp-for="salesOrder.OrderType" class="control-label"></label>
                <div class="input-group">
                    <select asp-for="salesOrder.OrderType" asp-items=@Model.Selected_SalesOrder_Types class="form-select select"></select>
                    <span class="input-group-append">
                        <span class="input-group-text bg-light d-block">
                            <i class="bi bi-clipboard2-check"></i>
                        </span>
                    </span>
                </div>
            </div>
        </div>
@*Second Row*@
        <div class="row p-1">
            <div class="col-auto col-md-4">
                <label asp-for="salesOrder.Date" class="control-label"></label>
                <div class="input-group date" id="datepicker">
                    <input type="text" asp-for="salesOrder.Date" class="form-control" readonly />
                    <span class="input-group-append">
                        <span class="input-group-text bg-light d-block">
                            <i class="bi bi-calendar3"></i>
                        </span>
                    </span>
                </div>
            </div>
            <div class="col-auto col-md-4">
                <label asp-for="salesOrder.OrderNbr" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="salesOrder.OrderNbr" class="form-control" readonly />
                    <span class="input-group-append">
                        <span class="input-group-text bg-light d-block">
                            <i class="bi bi-bag"></i>
                        </span>
                    </span>
                </div>
            </div>
        </div>
@*Third Row*@
        <div class="row p-1">
            <div class="col-auto col-md-4">
                <label asp-for="salesOrder.CustomerID" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="salesOrder.CustomerID" class="form-control" readonly />
                    <span class="input-group-append">
                        <span class="input-group-text bg-light d-block">
                            <i class="bi bi-card-list"></i>
                        </span>
                    </span>
                </div>
            </div>
            <div class="col-auto col-md-4">
                <label asp-for="salesOrder.CustomerName" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="salesOrder.CustomerName" class="form-control" readonly />
                    <span class="input-group-append">
                        <span class="input-group-text bg-light d-block">
                            <i class="bi bi-card-list"></i>
                        </span>
                    </span>
                </div>
            </div>
        </div>
@*Fourth Row*@
        <div class="row p-1">
            <div class="col-auto col-md-4">
                <label asp-for="salesOrder.OrderedQty" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="salesOrder.OrderedQty" asp-format="{0:N0}" class="form-control" readonly />
                    <span class="input-group-append">
                        <span class="input-group-text bg-light d-block">
                            <i class="bi bi-cart4"></i>
                        </span>
                    </span>
                </div>
            </div>
            <div class="col-auto col-md-4">
                <label asp-for="salesOrder.OrderTotal" class="control-label"></label>
                <div class="input-group">
                      <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">$</span>
                       </div>
                    <input asp-for="salesOrder.OrderTotal" asp-format="{0:N2}" class="form-control" readonly />
                    <span class="input-group-append">
                        <span class="input-group-text bg-light d-block">
                            <i class="bi bi-credit-card"></i>
                        </span>
                    </span>
                </div>
            </div>
        </div>
    @*Fifth Row*@
        <div class="row p-1">
            <div class="col-auto col-md-4">
                <label asp-for="salesOrder.ShipmentDate" class="control-label"></label>
                <div class="input-group date" id="datepicker">
                    <input type="text" asp-for="salesOrder.ShipmentDate" class="form-control" />
                    <span class="input-group-append">
                        <span class="input-group-text bg-light d-block">
                            <i class="bi bi-truck"></i>
                        </span>
                    </span>
                </div>
            </div>
            <div class="col-auto col-md-4">
                <label asp-for="salesOrder.LastModified" class="control-label"></label>
                <div class="input-group date">
                    <input type="text" asp-for="salesOrder.LastModified" class="form-control" readonly />
                    <span class="input-group-append">
                        <span class="input-group-text bg-light d-block">
                            <i class="bi bi-calendar3"></i>
                        </span>
                    </span>
                </div>
            </div>
        </div>
        <br/>
        <input type="submit" value="Save" class="btn btn-success" /> &nbsp;|&nbsp;
        <input type="submit" asp-page="./Details" value="Cancel" class="btn btn-warning" />
    </form>
</div>

@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.10.0/dist/js/bootstrap-datepicker.min.js" integrity="sha256-iZp9dyOMJKPFdn1UMra9ZMhPZAlSGZUzdhqqEgijE+Q=" crossorigin="anonymous"></script>
    <script type="text/javascript" src="\js\datePicker.js"></script>
}