@page
@model EditModel


@{
    ViewData ["Title"] = "Credentials - Edit";
}

<h4 class="align-text-top text-muted m-2">@ViewData["Title"]</h4>
<hr />

<div class="container-fluid p-1 m-2" style="background-color:#f4f4f4; box-shadow: 5px 5px 10px 5px #e1e1e1;">
    <p>
        <a asp-area="Demo" asp-page="/Home/Index"><i class="bi bi-house-up" title="Demo Home"></i></a>&nbsp;&nbsp;&nbsp;
        <a asp-area="Demo" asp-page="/Credentials/Index"><i class="bi bi-arrow-return-left" title="Credentials Setup"></i></a>&nbsp;&nbsp;&nbsp;
        <a asp-area="Demo" asp-page="/Credentials/Create"><i class="bi bi-plus-square" title="Create Credential"></i></a>

        <img src="~/img/setup.png" class="img-fluid" style="float:right;height:auto; width:70px;" title="Setup" />
    </p>
</div>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Credentials.Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Credentials.IsChecked" />
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Credentials.SiteUrl" class="control-label"></label>
                <input asp-for="Credentials.SiteUrl" class="form-control" />
                <span asp-validation-for="Credentials.SiteUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credentials.UserName" class="control-label"></label>
                <input asp-for="Credentials.UserName" class="form-control" />
                <span asp-validation-for="Credentials.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credentials.Password" class="control-label"></label>
                <input asp-for="Credentials.Password" class="form-control" />
                <span asp-validation-for="Credentials.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credentials.Tenant" class="control-label"></label>
                <input asp-for="Credentials.Tenant" class="form-control" />
                <span asp-validation-for="Credentials.Tenant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credentials.Branch" class="control-label"></label>
                <input asp-for="Credentials.Branch" class="form-control" />
                <span asp-validation-for="Credentials.Branch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Credentials.Locale" class="control-label"></label>
                <input asp-for="Credentials.Locale" class="form-control" />
                <span asp-validation-for="Credentials.Locale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br/>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
