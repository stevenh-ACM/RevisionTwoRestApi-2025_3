@page
@model DeleteModel


@{
    ViewData ["Title"] = "credential - Delete";
}

<h4 class="align-text-top text-muted m-2">@ViewData["Title"]</h4>
<hr />

<div class="container-fluid p-1 m-2" style="background-color:#f4f4f4; box-shadow: 5px 5px 10px 5px #e1e1e1;">
    <p>
        <a asp-area="Demo" asp-page="/Home/Index"><i class="bi bi-house-up" title="Demo Home"></i></a>&nbsp;&nbsp;&nbsp;
        <a asp-area="Demo" asp-page="/credential/Index"><i class="bi bi-arrow-return-left" title="credential Setup"></i></a>&nbsp;&nbsp;&nbsp;
        <a asp-area="Demo" asp-page="/credential/Create"><i class="bi bi-plus-square" title="Create Credential"></i></a>

        <img src="~/img/setup.png" class="img-fluid" style="float:right;height:auto; width:70px;" title="Setup" />
    </p>
</div>
<hr />

<h2>Are you sure you want to delete this?</h2>
<div>
    <h4>credential</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.credential.IsChecked)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.credential.IsChecked)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.credential.SiteUrl)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.credential.SiteUrl)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.credential.UserName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.credential.UserName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.credential.Password)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.credential.Password)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.credential.Tenant)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.credential.Tenant)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.credential.Branch)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.credential.Branch)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.credential.Locale)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.credential.Locale)</dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="credential.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
